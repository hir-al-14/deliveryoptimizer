{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (Ninja + ccache)",
      "description": "Developer preset using Ninja generator and ccache directory defaults.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "environment": {
        "CCACHE_DIR": "${sourceDir}/.ccache"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    }
  ]
}
